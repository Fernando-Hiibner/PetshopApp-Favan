@model IEnumerable<PetshopApp.Models.Proprietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Proprietarios" asp-action="index" method="GET">
    <p>
        Pesquisa: <select name="type" style="height: 30px; padding: 1px 2px 1px 2px; margin: 2px;">
            <option value="Nome">Nome</option>
            <option value="Telefone">Telefone</option>
            <option value="Email">Email</option>
        </select><input type="text" name="searchString">
        <input type="submit" value="Pesquisar">
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Cpf)
                </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.Endereco)
                </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.DtNascimento)
                </th> *@
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                    </td> *@
                @* <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                    </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.DtNascimento)
                    </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none;">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                        <i class="fa-solid fa-info"></i>
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none;">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
